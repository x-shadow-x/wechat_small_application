/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  font-size: 14px;
  height: 100%;
}

.loading {
    text-align: center;
    height: 40px;
    line-height: 40px;
}
.loading:before {
    content: '';
    display: inline-block;
    width: 16px;
    height: 16px;
    vertical-align: middle;
    background: url('../imgs/loading.gif') center no-repeat;
    background-size: 100% auto;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}